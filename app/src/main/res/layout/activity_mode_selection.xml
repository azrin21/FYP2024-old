<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/margin_128dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/text_size_32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parental"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control"
                android:textColor="@color/MediumOrchid"
                android:textSize="@dimen/text_size_32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:text="@string/who_will_be_using_this_device"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/text_size_24sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/margin_128dp"
        android:layout_marginBottom="@dimen/margin_64dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/margin_32dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ParentSignUp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/parents" />


            <TextView
                android:id="@+id/txtParentSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/parent"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/margin_32dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:id="@+id/ChildSignUp"
                android:layout_height="70dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/child" />

            <TextView
                android:id="@+id/txtChildSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/child"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

    </FrameLayout>


</FrameLayout>